    <bean id="singleConnectionDataSource" class="org.springframework.jdbc.datasource.SingleConnectionDataSource" destroy-method="closeConnection">
        <property name="url" value="jdbc:mysql://localhost:3306/springDemo"/>
        <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
        <property name="username" value="nitin"/>
        <property name="password" value="ttn"/>
        <property name="suppressClose" value="true"/>
    </bean>

    <bean id="txManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="singleConnectionDataSource"/>
    </bean>
    <tx:annotation-driven transaction-manager="txManager"/>


    <bean class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="singleConnectionDataSource"/>
    </bean>

    <bean id="sessionFactory" class="org.springframework.orm.hibernate5.LocalSessionFactoryBean">
        <property name="dataSource" ref="singleConnectionDataSource"/>
        <property name="packagesToScan" value="springDataAccess"/>
        <property name="hibernateProperties">
            <props>
                <prop key="dialect">org.hibernate.dialect.MySQLDialect</prop>
            </props>
        </property>
    </bean>


</beans>